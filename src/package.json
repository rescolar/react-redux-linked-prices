{
  "scripts": {
    "bundle": "jspm bundle-sfx app/main.js new.jspm.js",
    "envify": "export NODE_ENV=production && envify new.jspm.js > new.js",
    "envify-dev": "export NODE_ENV=development && envify new.jspm.js > new.js",
    "minify": "uglifyjs new.js -m -o new.min.js --source-map new.min.js.map",
    "build": "yarn run bundle && yarn run envify && yarn run minify && rm new.jspm.js* new.js",
    "build-dev": "yarn run bundle && yarn run envify-dev && yarn run minify && rm new.jspm.js* new.js",
    "start": "yarn run watch & yarn run serve",
    "serve": "browser-sync start --server --startPath '?hotel_id=67&guide_id=102'",
    "watch": "chokidar-socket-emitter",
    "lint": "eslint ."
  },
  "name": "new",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.18.5",
